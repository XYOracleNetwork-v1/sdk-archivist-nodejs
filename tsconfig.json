{
  "include": ["src"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "esnext", "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist"
  }
}